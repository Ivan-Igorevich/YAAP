<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="ru.iovchinnikov.yaap.web.screens.Onecheckeditor"
        messagesPack="ru.iovchinnikov.yaap.web.screens">
    <dsContext>
        <hierarchicalDatasource id="catSpendsDs"
                                class="ru.iovchinnikov.yaap.entity.CatSpend"
                                hierarchyProperty="parent"
                                view="catSpend-view">
            <query>
                <![CDATA[select e from yaap$CatSpend e]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="dsCompanies"
                              class="ru.iovchinnikov.yaap.entity.Company"
                              view="_local">
            <query>
                <![CDATA[select e from yaap$Company e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="dsProducts"
                              class="ru.iovchinnikov.yaap.entity.Product"
                              view="_local">
            <query>
                <![CDATA[select e from yaap$Product e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode forceDialog="true"
                height="800"
                width="600"/>
    <layout expand="gbMain">
        <label id="lblCaption"
               stylename="h1"
               value="msg://lblCpt"/>
        <groupBox id="gbMain"
                  spacing="true">
            <grid id="gridMain"
                  spacing="true"
                  width="100%">
                <columns>
                    <column flex="0.2"/>
                    <column flex="0.5"/>
                    <column flex="0.1"/>
                    <column flex="0.1"/>
                    <column flex="0.1"/>
                </columns>
                <rows>
                    <row>
                        <label id="lblDate"
                               value="msg://checkDate"
                               width="100%"/>
                        <datePicker id="dateBuy"
                                    width="100%"/>
                    </row>
                    <row>
                        <label id="lblCategory"
                               value="msg://lblCategory"
                               width="100%"/>
                        <pickerField colspan="4"
                                     metaClass="yaap$CatSpend"
                                     width="100%"/>
                    </row>
                    <row>
                        <label id="lblCompany"
                               value="msg://lblCompany"
                               width="100%"/>
                        <lookupPickerField colspan="4"
                                           optionsDatasource="dsCompanies"
                                           width="100%"/>
                    </row>
                    <row>
                        <label id="lblDescription"
                               value="msg://lblDescription"
                               width="100%"/>
                        <textArea colspan="4"
                                  rows="2"
                                  width="100%"/>
                    </row>
                    <row>
                        <label id="lblEnum"
                               value="msg://lblEnum"
                               width="100%"/>
                        <label id="lblName"
                               value="msg://lblName"
                               width="100%"/>
                        <label id="lblAmount"
                               value="msg://lblAmount"
                               width="100%"/>
                        <label id="lblVolume"
                               value="msg://lblVolume"
                               width="100%"/>
                        <label id="lblTotal"
                               value="msg://lblTotal"
                               width="100%"/>
                    </row>
                    <row id="rowLine0">
                        <frame id="frmLine0"
                               colspan="5"
                               screen="yaap$frmCheckLine"
                               width="100%"/>
                    </row>
                    <row>
                        <label id="lblSpacing"
                               width="100%"/>
                        <buttonsPanel width="100%">
                            <button id="btnAddRow"
                                    caption="msg://btnAddRow"
                                    invoke="btnAddClick"
                                    width="100%"/>
                        </buttonsPanel>
                    </row>
                </rows>
            </grid>
            <buttonsPanel align="BOTTOM_LEFT">
                <button id="btnOk"
                        caption="msg://btnSave"
                        invoke="btnOkClick"/>
                <button id="btnCancel"
                        caption="msg://btnCancel"
                        invoke="btnCancelClick"/>
            </buttonsPanel>
        </groupBox>
    </layout>
</window>
