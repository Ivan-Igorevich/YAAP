<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.iovchinnikov.yaap.web.transaction.TransactionEdit"
        datasource="transactionDs"
        focusComponent="mainGroup"
        messagesPack="ru.iovchinnikov.yaap.web.transaction">
    <dsContext>
        <datasource id="transactionDs"
                    class="ru.iovchinnikov.yaap.entity.Transaction"
                    view="transaction-view"/>
        <collectionDatasource id="sourcesDs"
                              class="ru.iovchinnikov.yaap.entity.Company"
                              view="_minimal">
            <query>
                <![CDATA[select e from yaap$Company e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="400"
                forceDialog="true"/>
    <layout expand="windowActions"
            spacing="true">
        <hbox>
            <label value="msg://source" />
            <lookupPickerField id="lpfSrc"
                               datasource="transactionDs"
                               optionsDatasource="sourcesDs"
                               property="source"/>
        </hbox>
        <fieldGroup id="mainGroup"
                    datasource="transactionDs">
            <column width="250px">
                <field id="fName"
                       property="name"
                       visible="false"/>
                <field id="fDate"
                       property="date"/>
                <field id="fDir"
                       property="direction"
                       visible="false"/>
                <field id="fCat"
                       property="category"/>
                <field id="fSrc"
                       optionsDatasource="sourcesDs"
                       property="source"
                       visible="false"/>
                <field id="fTtl"
                       property="total"/>
                <field id="fVol"
                       property="volume"
                       visible="false"/>
                <field id="fAmnt"
                       property="amount"
                       visible="false"/>
                <field id="fDesc"
                       property="description"
                       rows="2"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
